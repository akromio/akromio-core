{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/libs/*",
    "packages/plugins/*",
    "packages/presets/*",
    "packages/tools/*",
    "packages/triggers/*"
  ],
  "engine": {
    "node": ">= 18",
    "npm": ">= 8"
  },
  "devDependencies": {
    "@akromio/doubles": "^0.7.1",
    "@akromio/expected": "^0.7.0",
    "@akromio/expected-fs": "^0.7.0",
    "@akromio/expected-path": "^0.7.0",
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/preset-env": "^7.21.4",
    "@dogmalang/core": "^1.0.0-rc18.0",
    "c8": "^7.13.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^6.6.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7"
  },
  "scripts": {
    "clean": "npm run env -ws -- rm -rf node_modules/ && rm -rf node_modules && rm package-lock.json",
    "bootstrap": "npm run clean && npm i -ws",
    "build": "npm run -ws build",
    "test": "npm run -ws test",
    "test/itg": "npm run -ws --if-present test/itg",
    "tests": "npm t; npm run test/itg",
    "cov": "npm run -ws cov",
    "docker/build": "scripts/docker-build.sh",
    "docker/push": "scripts/docker-push.sh",
    "docker/login": "sudo docker login -u akromio --password-stdin < docker-hub-token.txt"
  }
}
