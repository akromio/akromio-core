{
  "name": "@akromio/cli",
  "version": "0.8.0",
  "description": "Base for the Akromio tools.",
  "years": "2022",
  "author": {
    "name": "Sia Codelabs",
    "email": "hello@siacodelabs.com",
    "url": "https://siacodelabs.com"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/akromio/nodejs-core/issues",
    "email": "bugs@akromio.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akromio/nodejs-core.git"
  },
  "preferGlobal": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">= 14",
    "npm": ">= 6"
  },
  "dependencies": {
    "@akromio/args": "^0.8.0",
    "@akromio/core": "^0.8.0",
    "@akromio/dataset": "^0.8.0",
    "@akromio/inquirer": "^0.8.0",
    "@akromio/jobs": "^0.8.0",
    "@akromio/pi-registry": "^0.8.0",
    "@akromio/registry": "^0.8.0",
    "@akromio/reporter": "^0.8.0",
    "@akromio/trigger": "^0.8.0",
    "@akromio/trigger-interval": "^0.8.0",
    "@dogmalang/core": "^1.0.0-rc18.0",
    "luxon": "^3.1.0",
    "table": "^6.8.1",
    "term-size": "^2.2.1",
    "yaml": "^2.1.3"
  },
  "scripts": {
    "lint": "dogmac check src tests",
    "build": "npm run build/src",
    "build/src": "rm -rf dist/ && dogmac js -o dist/cjs src && babel -d dist dist",
    "test": "npm run test/build && mocha --config .mocharc.yaml",
    "test/build": "rm -rf ./__tests__ && dogmac js -o __tests__ tests && babel -d __tests__ __tests__",
    "cov": "c8 mocha --config .mocharc.yaml"
  }
}
